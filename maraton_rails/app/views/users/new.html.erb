<h3> Creando nuevo Usuario... </h3>

<%= form_for @user, :as => :user, :url => users_create_path do |f| %>
  <p>
    <%= f.label :Name %> <br>
    <%= f.text_field :name %>  
  </p>
  <p>
    <%= f.label :Email %> <br>
    <%= f.text_field :email %>  
  </p>
  <p>
    <%= f.label :Password %> <br>
    <%= f.password_field :password %>  
  </p>
  <%= f.submit "Crear" %>
<% end %>



